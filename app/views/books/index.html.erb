<p style="color: green"><%= notice %></p>


 <%= search_form_for @q do |form| %>
  <div class="form-group">
    <%=form.label :name, "BUSCAR POR TÍTULO", class:"fw-bold"%>
    <%=form.text_field :name_cont, class:"form-control"%>
  </div>

  <div class="form-group">
    <%=form.label :author, "BUSCAR POR AUTOR", class:"fw-bold"%>
    <%=form.text_field :author_cont, class:"form-control"%>
  </div>


  <div class="form-group mt-2">
    <%= form.submit "Buscar Libro", class: "btn btn-primary btn-lg"%>
    <%= link_to "Todos mis libros", books_path, :class => "btn btn-outline-success mx-3" %>
  </div>

<%end%>

<h1 class="text-center mt-5">Mis Libros Leídos</h1> <br>
<%=paginate @books%>
<br>
